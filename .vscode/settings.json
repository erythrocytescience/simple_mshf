{
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-shell-escape",
        "-outdir=build",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "biber",
      "command": "biber",
      "args": [
        "%DOCFILE%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (with shell-escape, build/ dir, biber)",
      "tools": [
        "latexmk"
      ]
    }
  ],
  "latex-workshop.latex.outDir": "./build",
  "latex-workshop.latex.autoBuild.run": "onFileChange"
}
